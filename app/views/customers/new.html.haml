%h3 Add New Customer

= simple_form_for(@customer, :html => {:class => 'form-horizontal'}) do |f|
	=f.input :customer_type, collection: [ "mailorder", "largeorder", "walkinretail"], default: ["mailorder"]
	%br
	=f.input :first_name, label: 'First Name'
	=f.input :middle_name, label: 'Middle Name'
	=f.input :last_name, label: 'Last Name'
	%br
	=f.input :address, label: 'Address'
	=f.input :province, label: 'Province'
	=f.input :telephone_number, label: 'Telephone No'
	=f.input :email, label: 'Email'
	%br
	=f.input :registration_number, label: 'TRN/BRN'
	=f.input :initial_credit, label: 'Initial Credit'
	=f.input :sales_assistant, label: 'Sales Assistant ID'

	=f.button :submit, :class => 'btn-primary'
	=submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger"
 
<script language="javascript">
var $type = $('#customer_customer_type'), $reg_num = $('#customer_registration_number'), $credit = $('#customer_initial_credit'), $sales_ast = $('#customer_sales_assistant');
$type.change(function () {
if ($type.val() == 'mailorder') {
$credit.attr('disabled', 'disabled').val('');
$sales_ast.attr('disabled', 'disabled').val('');
$reg_num.removeAttr('disabled');
} 
if ($type.val() == 'largeorder') {
$credit.removeAttr('disabled');
$sales_ast.removeAttr('disabled');
$reg_num.removeAttr('disabled');
}
if ($type.val() == 'walkinretail') {
$credit.removeAttr('disabled');
$sales_ast.attr('disabled', 'disabled').val('');
$reg_num.removeAttr('disabled');
}
}).trigger('change');
</script>