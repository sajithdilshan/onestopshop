%h3 Orders List

= form_tag orders_path, :method => 'get', :class => "form-inline" do
  = label_tag "Search in   "
  = select_tag "column_name", options_for_select(%w{ id transaction_id product_id}) 
  = label_tag "  for "
  = text_field_tag :search, nil, :placeholder => " ", :class => "input-medium "
  = submit_tag "Go", :name => 'submit', :class => "btn"


%table{:class=> 'table table-striped'}
  %thead
    %tr
      %th ID
      %th Transaction ID
      %th Product ID
      %th Quantity
      %th Cost
  %tbody
    - @orders.each do |order|
      %tr
        %td= order.id
        %td= order.transaction_id
        %td= order.product_id
        %td= order.quantity
        %td= order.cost
